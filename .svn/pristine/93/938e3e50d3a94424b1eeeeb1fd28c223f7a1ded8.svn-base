using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class HUDManager : MonoBehaviour {

    private PlayerObjectController _POC;

    public Slider shieldBar;
    public Text shieldNumber;
    public Slider hullBar;
    public Text hullNumber;
    public Slider energyBar;
    public Text energyNumber;


    private void Awake()
    {
        _POC = GameObject.FindGameObjectWithTag("Player").GetComponent<PlayerObjectController>();
    }

    private void Update()
    {
        UpdateHUDVitals();
    }

    void UpdateHUDVitals()
    {


        //shield values
        if ((_POC.GetMaxShields() < 1))
        {
            shieldBar.value = 0;
            shieldNumber.text = "0";
        }
        else
        {
            shieldBar.value = _POC.GetCurrentShieldPoints() / _POC.GetMaxShields();
            shieldNumber.text = _POC.GetCurrentShieldPoints().ToString();
        }
        //Hull values
        if ((_POC.GetMaxHullPoints() < 1))
        {
            hullBar.value = 0;
            hullNumber.text = "0";
        }
        else
        {
            hullBar.value = _POC.GetCurrentHullPoints() / _POC.GetMaxHullPoints();
            hullNumber.text = _POC.GetCurrentHullPoints().ToString();
        }

        //Energy Values
        if ((_POC.GetMaxEnergy() < 1))
        {
            energyBar.value = 0;
            energyNumber.text = "0";
        }
        else
        {
            energyBar.value = _POC.GetAvailEnergy() / _POC.GetMaxEnergy();
            energyNumber.text = _POC.GetAvailEnergy().ToString();
        }

    }
}
