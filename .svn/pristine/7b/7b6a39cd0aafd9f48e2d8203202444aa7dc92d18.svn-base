using UnityEngine;

[CreateAssetMenu]
public class Item : ScriptableObject
{
    public Sprite sprite;
    public string itemType;
    public string itemName;
    public bool stackable;
    public int maxStackSize;
    public bool isEquipment;
    public bool isEquipped;
    public int itemID;
    public string itemDescription;
    public float baseCostCredits;
    public float itemWeight;
    public string itemQuality;


    public int quantity = 0;

    public void InitializeItem(Sprite iconImg, string itemtype, string itemname, int ID, bool isequipment, string itemdescription, float basecostcredits, float itemweight, string itemquality = "Common", bool canStack = false, int maxstacksize = 1, bool isequipped = false)
    {
        sprite = iconImg;
        itemType = itemtype;
        itemName = itemname;
        stackable = canStack;
        maxStackSize = maxstacksize;
        itemID = ID;
        isEquipment = isequipment;
        isEquipped = isequipped;
        itemDescription = itemdescription;
        baseCostCredits = basecostcredits;
        itemWeight = itemweight;
        itemQuality = itemquality;
    }

    public int GetQuantity()
    {
        return quantity;
    }

    public void AddToStack(int qantityToAdd)
    {
        quantity += qantityToAdd;
    }

    private void OnMouseOver()
    {
        if (Input.GetMouseButtonDown(0))
        {
            Debug.Log("Right click registered, like a fuckin boss");
        }
    }


}
