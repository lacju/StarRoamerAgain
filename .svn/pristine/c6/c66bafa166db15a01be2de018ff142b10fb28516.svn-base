using System.Collections;
using System.Collections.Generic;
using UnityEngine;

[CreateAssetMenu]
public class Engine : Item
{
    [Tooltip("Max speed of the engine")]
    public float maxSpeed;
    [Tooltip("How quickly the ship turns (rotates on the Y axis)")]
    public float acceleration;
    [Tooltip("How quickly the ship turns (rotates on the Y axis)")]
    public float turnSpeed;
    [Tooltip("Afterburner boost level (physics magnitude: 1-1000)")]
    public float boostSpeed;
    [Tooltip("Energy cost per boost cycle ")]
    public float boostEnergyCost;
    [Tooltip("Time between boost cycles")]
    public float boostCoolDown;

    private PlayerObjectController _POC;

    public void InitializeEquipment(float maxspeed, float turnspeed, float accelaration, float boostspeed, float boostcost, float boostcd, Sprite iconImg, string itemtype, string itemname, int ID, bool isequipment, string itemdescription, float basecostcredits)
    {
        maxSpeed = maxspeed;
        turnSpeed = turnspeed;
        boostSpeed = boostspeed;
        boostEnergyCost = boostcost;
        boostCoolDown = boostcd;
        sprite = iconImg;
        itemType = itemtype;
        itemName = itemname;
        itemID = ID;
        isEquipment = isequipment;
        itemDescription = itemdescription;
        baseCostCredits = basecostcredits;
        acceleration = accelaration;
    }
    
    
    public void EquipEquipment()
    {
        _POC = GameObject.FindGameObjectWithTag("Player").GetComponent<PlayerObjectController>();

        _POC.SetMaxSpeed(maxSpeed);
        _POC.SetTurnSpeed(turnSpeed);
        _POC.SetBoostSpeed(boostSpeed);
        _POC.SetBoostEnergyCost(boostEnergyCost);
        _POC.SetBoostCoolDown(boostCoolDown);
        isEquipped = true;
    }

    public void Unequip()
    {
        _POC = GameObject.FindGameObjectWithTag("Player").GetComponent<PlayerObjectController>();

        _POC.SetMaxSpeed(0);
        _POC.SetTurnSpeed(0);
        _POC.SetBoostSpeed(0);
        _POC.SetBoostEnergyCost(0);
        _POC.SetBoostCoolDown(0);
        isEquipped = false;
    }


}
